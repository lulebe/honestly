<h3>{{user.name}}</h3>

<p>
  Here you can send a message to {{user.name}}. Be careful what you write, you can't edit your message later because it's anonymous.
</p>

{{#if msgSuccess}}
  <div class="message success">Your Message was sent!</div>
{{/if}}

<form action="/user/{{user.id}}" method="POST">
  <div class="card sw-form">
    <div class="card-title">
      <span>Write Message</span>
    </div>
    <div class="card-content">
      <label for="msg"><small>Message</small></label><br>
      <textarea id="msg" name="message" placeholder="Your Message" class="message-input" minlength="10"></textarea>
    </div>
    <div class="card-actions">
      <button type="submit">Send</button>
    </div>
  </div>
</form>