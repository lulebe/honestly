{{#if hasError}}
  <div class="message error">{{error}}</div>
{{/if}}

<form action="/loginuser" method="POST">
  <fieldset class="sw-form">
    <legend>Login</legend>
    <label for="loginusr"><small>Username</small></label><br>
    <input type="text" id="loginusr" name="username" placeholder="Tom"><br><br>
    <label for="loginpw"><small>Password</small></label><br>
    <input type="password" id="loginpw" name="password" placeholder="*****"><br><br>
    <button type="submit">Login</button>
  </fieldset>
</form>
<br><br><br>
<form action="/createuser" method="POST">
