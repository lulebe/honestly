    <input type="text" id="signupusr" name="username" placeholder="Tom"><br><br>
    <label for="signuppw"><small>Password</small></label><br>
    <input type="password" id="signuppw" name="password" placeholder="*****"><br><br>
    <button type="submit">Sign Up</button>
  </fieldset>
</form>